<Window x:Class="DndSoundMasterProofOfConcept.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DndSoundMasterProofOfConcept"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Button x:Name="playButton" Content="Play" HorizontalAlignment="Left" Margin="282,272,0,0" VerticalAlignment="Top" Width="60" Background="#FFEE9090" Click="playButton_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="524,272,0,0" VerticalAlignment="Top" Width="60" Background="#FFEE9090" Click="stopButton_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
